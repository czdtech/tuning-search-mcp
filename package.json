{
  "name": "tuningsearch-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for TuningSearch API integration - provides search, news, and web crawling capabilities for AI assistants",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tuningsearch-mcp-server": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "npm run clean && npm run build",
    "start": "node dist/index.js",

    "test": "jest",

    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",

    "clean": "rimraf dist coverage .tsbuildinfo",

    "prebuild": "npm run clean && npm run type-check",
    "postbuild": "chmod +x dist/index.js && npm run build:verify",
    "build:verify": "node -e \"console.log('Build verification: Entry point exists:', require('fs').existsSync('./dist/index.js'))\"",
    "prepack": "npm run clean && npm run lint && npm run type-check && npm run build",
    "package": "npm pack",
    "package:test": "npm pack --dry-run",
    "package:verify": "npm run package:test && npm run package:size-check",
    "package:size-check": "npm run package && du -h *.tgz && rm -f *.tgz",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run type-check && npm run build",
    "postpublish": "echo 'Package published successfully!'",
    "publish:dry": "npm publish --dry-run",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish --tag latest",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "verify": "npm run lint && npm run type-check && npm run test:unit",
    "verify:strict": "npm run lint && npm run type-check:strict && npm run test:unit",
    "ci": "npm run verify && npm run build && npm run test:integration",
    "ci:strict": "npm run verify:strict && npm run build:production && npm run test:all",
    "deploy:verify": "ts-node scripts/verify-deployment.ts",
    "deploy:test-environments": "ts-node scripts/test-deployment-environments.ts",
    "deploy:all": "npm run deploy:verify && npm run deploy:test-environments"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tuningsearch",
    "search",
    "ai-assistant",
    "web-search",
    "news-search",
    "web-crawling",
    "api-integration",
    "typescript"
  ],
  "author": {
    "name": "TuningSearch MCP Server",
    "email": "support@tuningsearch.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/tuningsearch/tuningsearch-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuningsearch/tuningsearch-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/tuningsearch/tuningsearch-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "msw": "^2.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tuningsearch"
  }
}
